<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3296FA">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/x230"
        android:layout_height="@dimen/y50"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y50"
        android:background="@mipmap/top" />


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="@dimen/x264"
        android:layout_height="@dimen/y33"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y30"
        android:background="@drawable/bg_etcontent_left_bg">

        <FrameLayout
            android:id="@+id/fl_yonghu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_etcontent_right_bg">

            <ImageView
                android:id="@+id/img_yonghu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/yonghu" />

        </FrameLayout>


        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y33"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@id/fl_yonghu"
            android:background="@null"
            android:hint="请输入帐号"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="#fff"
            android:textColorHint="#fff" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="@dimen/x264"
        android:layout_height="@dimen/y33"
        android:layout_below="@id/rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y21"
        android:background="@drawable/bg_etcontent_left_bg">

        <FrameLayout
            android:id="@+id/fl_mima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_etcontent_right_bg">

            <ImageView
                android:id="@+id/img_mima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/mima" />

        </FrameLayout>


        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y33"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@id/fl_mima"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="18"
            android:maxLines="1"
            android:textColor="#fff"
            android:textColorHint="#fff" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/x262"
        android:layout_height="@dimen/y33"
        android:layout_below="@id/rl2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y30"
        android:background="@drawable/bg_login"
        android:text="登录"
        android:textAllCaps="false"
        android:textColor="#3296FA"
        android:textSize="@dimen/x15"
        android:visibility="visible" />

</RelativeLayout>
